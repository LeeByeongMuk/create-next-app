{
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": [
      "./tsconfig.json"
    ]
  },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "next",
    "next/core-web-vitals",
    "airbnb",
    "airbnb/hooks",
    "airbnb-typescript",
    "prettier"
  ],
  "rules": {
    "@typescript-eslint/no-use-before-define": "off",
    "@typescript-eslint/naming-convention": "off",
    "react/react-in-jsx-scope": "off",
    "react/jsx-props-no-spreading": "off",
    "react/require-default-props": "off",
    "react/prop-types": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    ],
    "semi": [
      2,
      "always"
    ],
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "index"
        ],
        "pathGroups": [
          {
            "pattern": "@/components/**",
            "group": "external",
            "position": "after"
          },
          {
            "pattern": "@/**/**.types",
            "group": "external",
            "position": "after"
          },
          {
            "pattern": "@/**/**.styled",
            "group": "external",
            "position": "after"
          },
          {
            "pattern": "@/assets/**",
            "group": "external",
            "position": "after"
          }
        ]
      }
    ]
  },
  "ignorePatterns": [
    "node_modules/",
    "next.config.js"
  ]
}
